            function Click(answer) {
                var img = document.getElementById('image');
                var response = document.getElementById('response');
                
                if (answer === 'yes') {
                    img.src = 'https://i.pinimg.com/originals/63/90/3d/63903d9f34f02388fff5d0c7dd6e5085.gif';
